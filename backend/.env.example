# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/marquee-booking

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@marquee-booking.com

# Frontend URLs (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
# Note: In development, localhost with any port is automatically allowed

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
